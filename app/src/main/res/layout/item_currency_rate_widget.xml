<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:background="@drawable/card_background"
    android:padding="12dp">

    <!-- Currency Code Circle -->
    <TextView
        android:id="@+id/tvCurrencyCode"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:background="@drawable/currency_code_circle"
        android:gravity="center"
        android:text="USD"
        android:textColor="@color/text_primary"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Currency Name -->
    <TextView
        android:id="@+id/tvCurrencyName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="Доллар США"
        android:textColor="@color/text_primary"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tvCurrencyCode"
        app:layout_constraintTop_toTopOf="@id/tvCurrencyCode" />

    <!-- Buy Price -->
    <TextView
        android:id="@+id/tvBuyLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Покупка:"
        android:textColor="@color/text_secondary"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@id/tvCurrencyName"
        app:layout_constraintTop_toBottomOf="@id/tvCurrencyName" />

    <TextView
        android:id="@+id/tvBuyPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="92.50 T"
        android:textColor="@color/transaction_positive"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@id/tvBuyLabel"
        app:layout_constraintStart_toEndOf="@id/tvBuyLabel" />

    <!-- Sell Price -->
    <TextView
        android:id="@+id/tvSellLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Продажа:"
        android:textColor="@color/text_secondary"
        android:textSize="12sp"
        app:layout_constraintBaseline_toBaselineOf="@id/tvBuyLabel"
        app:layout_constraintStart_toEndOf="@id/tvBuyPrice" />

    <TextView
        android:id="@+id/tvSellPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="94.20 T"
        android:textColor="@color/pin_error"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@id/tvBuyLabel"
        app:layout_constraintStart_toEndOf="@id/tvSellLabel" />
</androidx.constraintlayout.widget.ConstraintLayout>

