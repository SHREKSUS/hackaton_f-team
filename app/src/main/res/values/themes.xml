<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FBANK" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/button_primary_bg</item>
        <item name="colorPrimaryVariant">@color/button_primary_bg</item>
        <item name="colorOnPrimary">@color/button_primary_text</item>

        <item name="colorSecondary">@color/button_secondary_bg</item>
        <item name="colorSecondaryVariant">@color/button_secondary_bg</item>
        <item name="colorOnSecondary">@color/button_secondary_text</item>

        <item name="android:colorBackground">@color/background_primary</item>
        <item name="colorSurface">@color/surface_primary</item>
        <item name="android:navigationBarColor">@color/background_primary</item>
        <item name="android:statusBarColor">@color/status_bar_color</item>

        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>

        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar">true</item>
        <item name="android:forceDarkAllowed">false</item>
    </style>
</resources>