<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:usesCleartextTraffic="true"
        android:networkSecurityConfig="@xml/network_security_config"
        android:theme="@style/Theme.FBANK">
        
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>
        
        <activity
            android:name=".WelcomeActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity
            android:name=".LoginActivity"
            android:exported="false"
            android:parentActivityName=".WelcomeActivity" />
        
        <activity
            android:name=".RegisterActivity"
            android:exported="false"
            android:parentActivityName=".WelcomeActivity" />
        
        <activity
            android:name=".RegisterStep1Activity"
            android:exported="false"
            android:parentActivityName=".WelcomeActivity" />
        
        <activity
            android:name=".RegisterStep2Activity"
            android:exported="false"
            android:parentActivityName=".RegisterStep1Activity" />
        
        <activity
            android:name=".RegisterStep3Activity"
            android:exported="false"
            android:parentActivityName=".RegisterStep2Activity" />
        
        <activity
            android:name=".CreatePinActivity"
            android:exported="false"
            android:parentActivityName=".WelcomeActivity" />
        
        <activity
            android:name=".MainActivity"
            android:exported="false"
            android:parentActivityName=".WelcomeActivity" />
        
        <activity
            android:name=".QRScannerActivity"
            android:exported="false"
            android:parentActivityName=".MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.FBANK" />
        
        <activity
            android:name=".CardSelectionActivity"
            android:exported="false"
            android:parentActivityName=".CreatePinActivity" />
        
        <activity
            android:name=".LinkCardActivity"
            android:exported="false"
            android:parentActivityName=".CardSelectionActivity" />
        
        <activity
            android:name=".TransferActivity"
            android:exported="false"
            android:parentActivityName=".MainActivity" />
        
        <activity
            android:name=".CardsListActivity"
            android:exported="false"
            android:parentActivityName=".MainActivity" />
        
        <activity
            android:name=".CardDetailsActivity"
            android:exported="false"
            android:parentActivityName=".CardsListActivity" />
        
        <activity
            android:name=".ManageCardsActivity"
            android:exported="false"
            android:parentActivityName=".MainActivity" />
        
        <activity
            android:name=".PaymentsActivity"
            android:exported="false"
            android:parentActivityName=".MainActivity" />
        
        <activity
            android:name=".TransactionsHistoryActivity"
            android:exported="false"
            android:parentActivityName=".MainActivity" />
        
        <activity
            android:name=".TransactionsAnalyticsActivity"
            android:exported="false"
            android:parentActivityName=".TransactionsHistoryActivity" />
        
        <activity
            android:name=".PaymentDetailsActivity"
            android:exported="false"
            android:parentActivityName=".PaymentsActivity" />
        
        <activity
            android:name=".OtherBankTransferActivity"
            android:exported="false"
            android:parentActivityName=".PaymentsActivity" />
        
        <activity
            android:name=".TransferBetweenCardsActivity"
            android:exported="false"
            android:parentActivityName=".TransferActivity" />
        
        <activity
            android:name=".TransferByPhoneActivity"
            android:exported="false"
            android:parentActivityName=".TransferActivity" />
        
        <activity
            android:name=".InternationalTransferActivity"
            android:exported="false"
            android:parentActivityName=".TransferActivity" />
        
        <activity
            android:name=".AddFavoriteActivity"
            android:exported="false"
            android:parentActivityName=".TransferActivity" />
        
        <activity
            android:name=".AddFavoriteFromHistoryActivity"
            android:exported="false"
            android:parentActivityName=".AddFavoriteActivity" />
        
        <activity
            android:name=".DepositActivity"
            android:exported="false"
            android:parentActivityName=".MainActivity" />
        
        <activity
            android:name=".TransferSuccessActivity"
            android:exported="false"
            android:parentActivityName=".TransferBetweenCardsActivity" />
        
        <activity
            android:name=".TransferErrorActivity"
            android:exported="false"
            android:parentActivityName=".TransferBetweenCardsActivity" />
        
        <activity
            android:name=".ForgotPasswordActivity"
            android:exported="false"
            android:parentActivityName=".CreatePinActivity" />
            
    </application>

</manifest>